<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Contacts" parent="Base.Theme.Contacts">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/SnackbarLightTheme</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonLightTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewLightTheme</item>

        <!-- EditText -->
        <item name="textInputStyle">@style/textInputStyle</item>
    </style>

    <style name="Base.Theme.Contacts" parent="Theme.MaterialComponents.DayNight">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="editTextStyle">@style/editTextStyle</item>
    </style>

    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="SnackbarLightTheme" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MaterialSnackbarTextButtonLightTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialSnackbarTextViewLightTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>